.wrapper
  position: absolute;
  height: 100%;
  width: 100%;
  background: url(../images/background.jpg);
  background-size: cover;
  overflow: scroll;
  min-height: 600px;

.text
  max-width: 600px;
  position: relative;
  text-align: center;
  margin: auto;
  color: #ffffff;
  top: 50%;
  transform: translateY(-50%);
  padding: 0 20px;
  font-family: "neuzeit-grotesk", sans-serif;

h1
  font-size: 72px;
  margin: 0;
  line-height: 60px;

h2
  font-size: 36px;
  font-weight: 100;
  line-height: 39px;

p
  font-size: 24px;
  font-weight: 100;
  line-height: 30px;
  color: #C5CAE9;

a
  color: #ffffff;
  text-decoration: none;


.cta
  border: 1px solid #ffffff;
  border-radius: 8px;
  padding: 20px 40px;
  display: inline-block;
  font-size: 24px;
  font-weight: 100;
  -webkit-transition: background-color 0.2s ease-out;
  transition: background-color 0.2s ease-out;
  background-color: rgba(0, 0, 0, 0);
  &:hover
    background-color: rgba(0, 0, 0, 0.5);

.follow
  font-size: 18px;
  color: #9FA7DC;
  margin-top: 80px;
  display: block;
  -webkit-transition: color 0.2s ease-out;
  transition: color 0.2s ease-out;
  &:hover
    color: #c5cae9;


 @media only screen and (max-width: 700px)
  .wrapper
    min-height: 400px;

  .text
    max-width: 350px;

  h1
    font-size: 36px;
    line-height: 36px;

  h2
    font-size: 20px;
    margin: 20px 0 40px 0;
    line-height: 25px;

  p
    font-size: 14px;
    margin: 0 0 25px 0;
    line-height: 19px;

  .cta
    padding: 20px 40px;
    font-size: 14px;

  .follow
    font-size: 12px;
    margin-top: 30px;
